# battery monitor display
SUBSYSTEM=="ttyACM0", BUS=="usb", SYSFS{idVendor}=="16d0", SYSFS{idProduct}=="059d", SYMLINK+="youbot/lcd_display", RUN+="/etc/youbot/youbot_battery_monitor.sh"

# front laser
KERNEL=="ttyACM1", ACTION=="add", ATTRS{idVendor}=="15d1", MODE="0666", GROUP="dialout", PROGRAM="/opt/ros/indigo/env.sh rosrun hokuyo_node getID %N q", SYMLINK+="sensors/hokuyo_%c"

# back laser
KERNEL=="ttyACM2*", ACTION=="add", ATTRS{idVendor}=="15d1", MODE="0666", GROUP="dialout", PROGRAM="/opt/ros/indigo/env.sh rosrun hokuyo_node getID %N q", SYMLINK+="sensors/hokuyo_%c"
